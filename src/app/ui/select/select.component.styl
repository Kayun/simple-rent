@import "~helpers/index"

:host
  position: relative;
  display: inline-block;
  vertical-align: top;

  /deep/ select
    //opacity: 0;
    //position: absolute;
    //z-index: -1;

  .select
    display: block
    width: 100%

    &__button
      position: relative
      padding: 0 $rhythm(2.5) 0 $rhythm(0.75)
      width: 100%
      background-color: #ffffff
      vertical-align: top
      border: none
      font-family: $font-family
      color: $primary-dark
      box-shadow: inset 0 0 0 2px alpha($primary-gray, .5)
      cursor: pointer
      adjust-font-size-to(base-font-size, 2)
      transition-single(box-shadow)

      &:hover
        box-shadow: inset 0 0 0 2px alpha($primary-gray, 1)

        .select__arrow
          border-color: alpha($primary-gray, 1)

      &.is-big
        padding: 0 $rhythm(1)
        adjust-font-size-to(20px, 3)
        font-weight: 500

      &:focus
        box-shadow: inset 0 0 0 2px $secondary-green

    &__arrow
      position: absolute
      top: 9px
      right: 18px
      size: $rhythm(0.75)
      border-bottom: 2px solid alpha($primary-gray, .5)
      border-right: 2px solid alpha($primary-gray, .5)
      transform: rotate(45deg)
      transition-single(border-color)

    &__current
      width: 100%
      color: $primary-dark
      font-family: $font-family
      font-weight: 300
      text-align: left
      vertical-align: top
      transition-single(color)
      ellipsis()

      &_placeholder
        color: $primary-gray

    &.is-open

      .select

        &__arrow
          top: 16px
          border-color: $secondary-green
          transform: rotate(-135deg)

        &__button
          box-shadow: inset 0 0 0 2px $secondary-green

@import "~helpers/index"

:host
  position: relative
  display: inline-block
  min-height: $rhythm(1)

  label
    display: block
    vertical-align: top
    width: 100%
    line-height: $rhythm(1)


  /deep/ input
    position: absolute
    z-index: -1
    opacity: 0

    &:checked:focus + .label

      &:before
        box-shadow: inset 0 0 0 20px $primary-green

    &:focus + .label

      &:before
        box-shadow: inset 0 0 0 2px $secondary-green

    &:checked + .label
      color: $secondary-green

      &:before
        box-shadow: inset 0 0 0 20px alpha($secondary-green, 1)

      &:hover

        &:before
          box-shadow: inset 0 0 0 20px alpha(lighten($secondary-green, 10%), 1)

    &:disabled + .label
      color: $primary-gray
      cursor: default

      &:hover

        &:before
          box-shadow: inset 0 0 0 2px alpha($primary-gray, .5)


  .label
    position: relative
    z-index: 1
    vertical-align: top
    display: inline-block
    line-height: $rhythm(1)
    padding-left: $rhythm(1.5)
    min-width: $rhythm(1)
    min-height: $rhythm(1)
    cursor: pointer
    transition-single(color)

    &:before
      position: absolute
      top: 0
      left: 0
      size: $rhythm(1)
      content: ''
      background-color: #fff
      box-shadow: inset 0 0 0 2px alpha($primary-gray, .5)
      transition-single()

    &:after
      position: absolute
      top: 2px
      left: 6px
      size: 8px 12px
      content: ''
      border-bottom: 2px solid #fff
      border-right: 2px solid #fff
      transform: rotate(45deg)

    &:hover

      &:before
        box-shadow: inset 0 0 0 2px $primary-gray

    &:empty
      padding-left: $rhythm(1)

:host(.blue)

  /deep/ input

    &:checked:focus + .label

      &:before
        box-shadow: inset 0 0 0 20px $primary-blue

    &:focus + .label

      &:before
        box-shadow: inset 0 0 0 2px $secondary-blue

    &:checked + .label
      color: $secondary-blue

      &:before
        box-shadow: inset 0 0 0 20px alpha($secondary-blue, 1)

      &:hover

        &:before
          box-shadow: inset 0 0 0 20px alpha(lighten($secondary-blue, 10%), 1)

.button
  display: inline-block
  border: none
  padding: 0 $rhythm(1)
  background-color: $secondary-green
  text-align: center
  vertical-align: top
  min-height: $rhythm(2)
  adjust-font-size-to(14px, 2)
  transition-single(background-color)
  font-weight: 500
  color: #ffffff
  cursor: pointer

  &:hover
    background-color: lighten($secondary-green, 10%)

  &:focus
    background-color: $primary-green

  &.is-dark
    background-color: $secondary-dark

    &:hover
      background-color: lighten($secondary-dark, 10%)

    &:focus
      background-color: $primary-dark

  &.is-orange
    background-color: $secondary-orange

    &:hover
      background-color: lighten($secondary-orange, 10%)

    &:focus
      background-color: $secondary-orange

  &.is-big
    min-height: $rhythm(3)
    font-weight: 700
    adjust-font-size-to(20px, 3)

  &.is-small
    min-height: $rhythm(1)
    font-weight: 400
    adjust-font-size-to(12px, 1)

  &.is-cancel
    background-color: transparent
    box-shadow: inset 0 0 0 2px $primary-gray
    color: $primary-gray
    transition-single(all)

    &:hover
      color: $secondary-dark-gray
      box-shadow: inset 0 0 0 2px $secondary-dark-gray

    &:focus
      color: $primary-dark-gray
      box-shadow: inset 0 0 0 2px $primary-dark-gray
